# required

variable "proxmox_api_url" {
  type = string
}

variable "proxmox_api_token_id" {
  type      = string
  sensitive = true
}

variable "proxmox_api_token_secret" {
  type      = string
  sensitive = true
}

variable "proxmox_node" {
  type = string
}

variable "vm_template" {
  type = string
}

variable "vm_id" {
  type = number
}

variable "vm_name" {
  type = string
}

variable "vm_desc" {
  type = string
}

variable "static_ipv4" {
  type = string
}

variable "gateway" {
  type = string
}

variable "nic" {
  type = string
}

# optional

variable "default_user" {
  type    = string
  default = "ansible"
}

variable "ssh_pub_key" {
  type    = string
  default = "ssh-rsa "
}

variable "cores" {
  type    = number
  default = 2
}

variable "memory" {
  type    = number
  default = 2048
}

variable "disk_size" {
  type    = string
  default = "16G"
}

variable "disk_location" {
  type    = string
  default = "ssd0"
}

variable "vlan_tag" {
  type    = number
  default = null
}

variable "dns_server" {
  type    = string
  default = "10.42.30.10"
}

variable "search_domain" {
  type    = string
  default = ".agartha"
}
